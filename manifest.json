{
  "manifest_version": 3,
  "name": "Cookie Manager",
  "version": "1.0",
  "author": "Igor Mpore",
  "description": "Manage your cookies easily and smoothly!",
  "host_permissions": [
    "*://*/",
    "http://*/*",
    "https://*/*"
  ],
  "permissions": [
    "cookies",
    "storage",
    "tabs",
    "nativeMessaging",
    "scripting",
    "activeTab"
  ],
  "icons": {
    "16": "assets/icons/icon_16.png",
    "48": "assets/icons/icon_48.png",
    "128": "assets/icons/icon_128.png"
  },
  "action": {
    "default_title": "CookieFlush",
    "default_icon": "assets/icons/icon_default.png",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/",
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/index.js"
      ]
    }
  ]
}